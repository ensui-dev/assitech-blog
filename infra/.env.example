# AWS Configuration
AWS_ACCOUNT_ID=123456789012
AWS_REGION=eu-west-3

# Application Configuration
APP_NAME=assitech
ENVIRONMENT=prod

# Database Configuration
DB_USERNAME=bloguser
DB_PASSWORD=YourSecurePasswordHere123!
DB_NAME=blogdb

# HuggingFace API
HUGGINGFACE_API_KEY=hf_your_key_here
HUGGINGFACE_MODEL=microsoft/Phi-3-mini-4k-instruct

# Unsplash API
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# JWT Configuration (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here

# Admin User
ADMIN_EMAIL=admin@assitech.challenge
ADMIN_PASSWORD=admin123

# Article Generation Cron (daily at 2 AM UTC)
ARTICLE_GENERATION_CRON=0 2 * * *

# Domain Configuration (optional)
DOMAIN_NAME=blog.yourdomain.com
CERTIFICATE_ARN=arn:aws:acm:eu-west-3:123456789012:certificate/abc-123

# EC2 Configuration (Free tier: t2.micro or t3.micro)
EC2_INSTANCE_TYPE=t2.micro
EC2_KEY_PAIR_NAME=your-keypair-name

# CodeBuild / GitHub Integration (optional - for automated builds)
GITHUB_REPO=your-username/your-repo-name
GITHUB_BRANCH=main
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Enable/Disable Features
ENABLE_AUTO_SCALING=true
ENABLE_CLOUDWATCH_ALARMS=true
ENABLE_BACKUPS=true
